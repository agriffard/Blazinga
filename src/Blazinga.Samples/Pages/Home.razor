@page "/"
@using System.Globalization
@using Blazinga.Samples.Enums
@using Blazinga.Extensions

<PageTitle>Home</PageTitle>

<h1>Home</h1>

<p>
    <label for="status">EnumSelect</label>
    <EnumSelect id="status" @bind-Value="SelectedStatus" class="form-select" />
</p>

<p>Status: @SelectedStatus.GetLocalizedDisplayName()</p>

<button class="btn btn-primary" @onclick="ChangeLanguageToEnglish">English</button>
<button class="btn btn-secondary" @onclick="ChangeLanguageToFrench">Fran√ßais</button>

@code {
    private Status SelectedStatus = Status.Closed;
    private void ChangeLanguageToFrench()
    {
        CultureInfo.CurrentCulture = new CultureInfo("fr");
        CultureInfo.CurrentUICulture = new CultureInfo("fr");
    }

    private void ChangeLanguageToEnglish()
    {
        CultureInfo.CurrentCulture = new CultureInfo("en");
        CultureInfo.CurrentUICulture = new CultureInfo("en");
    }
}
