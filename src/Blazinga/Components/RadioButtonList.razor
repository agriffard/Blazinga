@typeparam TValue

<div class="@CssClass">
    @if (Items != null)
    {
        foreach (var item in Items)
        {
            var itemId = $"{IdPrefix}_{item.Value?.ToString()}";
            <div class="form-check">
                <input class="form-check-input"
                       type="radio"
                       id="@itemId"
                       name="@GroupName"
                       value="@item.Value"
                       checked="@Equals(Value, item.Value)"
                       @onchange="() => OnValueChanged(item.Value)" />
                <label class="form-check-label" for="@itemId">@item.Text</label>
            </div>
        }
    }
</div>
